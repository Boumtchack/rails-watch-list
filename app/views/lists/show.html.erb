<h1><%= @list.name %></h1>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card" style="width: 18rem;">
    <img src= <%=bookmark.movie.poster_url  %> class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p class="card-text"><%= bookmark.comment %></p>
      <%= link_to "supprimer",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: 'btn btn-danger'
      %>
    </div>
  </div>
  <% end %>
</div>
<div class="link-bottom d-flex justify-content-center">
  <%= link_to "ajouter un bookmark", new_list_bookmark_path(@list), class: "btn btn-success" %>
</div>
